# ========================
# Server
# ========================
PORT=5000
NODE_ENV=development

# ========================
# SQL Server Configuration
# ========================
DB_USER=your_sql_username
DB_PASSWORD=your_sql_password
DB_SERVER=localhost
DB_DATABASE=elearning_db
DB_PORT=1433
DB_TRUST_CERT=true       # set true if using self-signed certificate

# ========================
# JWT / Authentication
# ========================
JWT_SECRET=your_jwt_secret_key
JWT_EXPIRES_IN=7d        # token expiry, e.g., 7 days

# ========================
# Stripe Payment
# ========================
STRIPE_SECRET_KEY=sk_test_your_secret_key
STRIPE_WEBHOOK_SECRET=whsec_your_webhook_secret

# ========================
# File Upload / Storage
# ========================
UPLOAD_PATH=uploads       # path for profile pictures and lesson videos

# ========================
# Email (optional, for forgot password)
# ========================
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM="E-Learn <no-reply@elearn.com>"
